{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "types": [
      "core-js",
      "node"
    ],
    "module": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5",
    "typeRoots": [
      "../node_modules/@types"
    ],
    "baseUrl": "./src",
    "paths": {
      "@app/common": ["app/common"],
      "@app/core": ["app/core"],
      "@app/pages": ["app/pages"]
    },
    "noStrictGenericChecks": true,
    "allowJs": false,
    "strict": true,
    "strictPropertyInitialization": false,
    "noUnusedParameters": true,
    "noUnusedLocals": true
  }
}
